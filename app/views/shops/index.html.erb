<h1>投稿一覧</h1>
<p><%= notice %></p> 

<div class="row">
    <% @shops.each do |shop| %>
        <div class="col-xs-12 col-md-6 shop-panel">
        <h2>お店の名前：<%= shop.shop_name %></h2>
        <p>場所：<%= shop.address %></p>
        <p>投稿者：<%= shop.user.name %></p>
        <p>訪問した日：<%= shop.visitdate %></p>
        <% if shop.shop_image.url.present? %>
            <p class = "shop_image">
            <strong>外観写真:</strong>
            <%= image_tag shop.shop_image.url %>
            </p>
            <p class = "bread_image">
            <strong>買ったパン1位:<%= shop.bread_name1 %></strong>
            <%= image_tag shop.bread_image1.url %>
            </p>
            <p class = "bread_image">
            <strong>買ったパン2位:<%= shop.bread_name2 %></strong>
            <%= image_tag shop.bread_image2.url %>
            </p>
            <p class = "bread_image">
            <strong>買ったパン3位:<%= shop.bread_name3 %></strong>
            <%= image_tag shop.bread_image3.url %>
            </p>
        <% end %>
            <div class="shop-links">
                <% if shop.user_id == current_user.id %> 
                    <%= link_to'詳細を確認する',shop_path(shop.id), class: "shop-links2" %>
                    <%= link_to "ブログ編集", edit_shop_path(shop.id), class: "shop-links2" %>
                    <%= link_to 'ブログ削除', shop_path(shop.id), class: "shop-links2", method: :delete,data: { confirm: '本当に削除してもいいですか？' } %>
                <% else %>
                    <%= link_to'詳細を確認する',shop_path(shop.id), class: "shop-links2" %>
                <% end %>
            </div>
        </div>
    <% end %>
    </div>
    <div class="btn btn-xs">
        <h2 id="btn"><%= link_to'新しく訪問記録を投稿する',new_shop_path %></h2>
    </div>
    <div>
        <a href="/tops">トップぺージへ</a>
    </div>
</div>
